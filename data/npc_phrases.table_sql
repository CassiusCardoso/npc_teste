CREATE TABLE npc_phrases (
    id INT AUTO_INCREMENT PRIMARY KEY,
    npc_id INT NOT NULL,
    phrase TEXT NOT NULL,
    situation VARCHAR(50) DEFAULT 'default',
    created_at TIMESTAMP DEFAULT CURRENT_TIMESTAMP
);

